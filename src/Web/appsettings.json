{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "RollingFile",
        "Args": { "pathFormat": "logs/common-{Date}.txt" }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/error-{Date}.txt",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  }
}
